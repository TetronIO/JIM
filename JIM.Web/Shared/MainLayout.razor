@inherits LayoutComponentBase
@using MudBlazor.Utilities
@inject IJSRuntime JSRuntime
<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" Theme="_theme" @ref="@_mudThemeProvider" />
<MudPopoverProvider/>
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>JIM</PageTitle>

<MudLayout>

    <MudDrawerContainer Class="mud-height-full">
        <MudDrawer @bind-Open="@IsDrawerOpen" Elevation="0" Variant="@DrawerVariant.Mini" Overlay="false" Class="jim-drawer"
                   @onmouseenter="@OnDrawerMouseEnter" @onmouseleave="@OnDrawerMouseLeave">
            
            <div class="jim-drawer-logo">
                <MudImage Src="/images/jim-logo.png" Width="28" Class="mt-4 ms-4 mb-3" Alt="JIM Logo"></MudImage>
                @if (IsDrawerOpen)
                {
                    <MudText Inline="true">JIM</MudText>
                }
            </div>

            <NavMenu DrawerOpen="@IsDrawerOpen"/>

            <div class="jim-drawer-footer mud-text-secondary">
                <MudTooltip Text="@(IsDrawerPinned ? UnpinMenuText : PinMenuText)" Arrow="true" Placement="Placement.Top">
                    <MudToggleIconButton Toggled="@IsDrawerPinned"
                                         ToggledChanged="@(_ => ToggleDrawerPinned())"
                                         Icon="@Icons.Material.Outlined.PushPin"
                                         Color="@Color.Inherit"
                                         ToggledIcon="@Icons.Material.Filled.PushPin"
                                         ToggledColor="@Color.Inherit"
                                         Size="@Size.Small"/>
                </MudTooltip>
                <MudTooltip Text="@(IsDarkMode ? LightModeText : DarkModeText)" Arrow="true" Placement="Placement.Top">
                    <MudToggleIconButton @bind-Toggled="@IsDarkMode"
                                         Icon="@Icons.Material.Filled.WbSunny"
                                         Color="@Color.Inherit"
                                         ToggledIcon="@Icons.Material.Filled.DarkMode"
                                         ToggledColor="@Color.Inherit"
                                         Size="@Size.Small"/>
                </MudTooltip>
            </div>

            
        </MudDrawer>

        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-5 pb-5">
                @Body

                <div class="jim-page-footer">
                    <MudText Align="Align.Center" Typo="Typo.body2" Class="mt-5 mud-text-secondary">
                        &copy; @DateTime.UtcNow.Year Tetron Ltd. All rights reserved.
                    </MudText>

                    <MudText Align="Align.Center">
                        <MudLink Href="https://github.com/TetronIO/JIM">
                            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" aria-label="See us on GitHub" Style="color:#515560;"/>
                        </MudLink>
                    </MudText>
                </div>

            </MudContainer>
        </MudMainContent>

    </MudDrawerContainer>

</MudLayout>

@code
{
    private readonly MudTheme _theme = new()
    {
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily =
                [
                    "-apple-system",
                    "Segoe UI Variable Display",
                    "Roboto",
                    "Helvetica Neue",
                    "Arial"
                ],
                FontWeight = "400",
                FontSize = "16px"
            }
        },
        PaletteLight = new PaletteLight()
        {
            AppbarBackground = new MudColor("rgb(60,148,255)"),
            Background = new MudColor("#f6f9fc"),
            DrawerBackground = new MudColor("#eef2f6"),
            Primary = new MudColor("rgb(60,148,255)")
        },
        PaletteDark = new PaletteDark()
        {
            ActionDefault = new MudColor("#acb0b3"), // pagination arrow link text
            // ActionDisabled = new MudColor("#2c3441"), // disabled button
            AppbarBackground = new MudColor("#1a273b"),
            Background = new MudColor("#0e1420"),
            Divider = new MudColor("#292838ff"),
            DrawerBackground = new MudColor("#111926"),
            DrawerIcon = new MudColor("#46545f"),
            DrawerText = new MudColor("#acb0b3"),
            LinesDefault = new MudColor("#2a303c"),
            LinesInputs = new MudColor("#595d68"),
            Primary = new MudColor("rgb(60,148,255)"),
            Surface = new MudColor("#121826"),
            TableHover = new MudColor("#151b2b"),
            TableLines = new MudColor("#2a303c"),
            TextDisabled = new MudColor("#535861"),
            TextPrimary = new MudColor("#acb0b3"),
            TextSecondary = new MudColor("#515560")
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "4px"
        }
    };

    private MudThemeProvider? _mudThemeProvider;
    private const string LightModeText = "Switch to light mode";
    private const string DarkModeText = "Switch to dark mode";
    private const string PinMenuText = "Pin menu open";
    private const string UnpinMenuText = "Unpin menu";
    // Minimum viewport width (in pixels) to have drawer open by default
    // 1400px is a common breakpoint for "large" screens
    private const int LargeScreenBreakpoint = 1400;
    // Default to closed/unpinned - will be set based on screen size in OnAfterRenderAsync
    private bool IsDrawerOpen { get; set; }
    private bool IsDrawerPinned { get; set; }
    private bool _isDarkMode;
    private bool IsDarkMode
    {
        get => _isDarkMode;
        set
        {
            if (_isDarkMode != value)
            {
                _isDarkMode = value;
                _ = UpdateDarkModeClassAsync(value);
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Get dark mode preference
            if (_mudThemeProvider != null)
            {
                _isDarkMode = await _mudThemeProvider.GetSystemDarkModeAsync();
                await UpdateDarkModeClassAsync(_isDarkMode);
            }

            // Detect screen width and set drawer state accordingly
            var windowWidth = await JSRuntime.InvokeAsync<int>("eval", "window.innerWidth");
            var isLargeScreen = windowWidth >= LargeScreenBreakpoint;

            IsDrawerOpen = isLargeScreen;
            IsDrawerPinned = isLargeScreen;

            StateHasChanged();
        }
    }

    private async Task UpdateDarkModeClassAsync(bool isDark)
    {
        try
        {
            if (isDark)
                await JSRuntime.InvokeVoidAsync("eval", "document.body.classList.add('jim-dark-mode')");
            else
                await JSRuntime.InvokeVoidAsync("eval", "document.body.classList.remove('jim-dark-mode')");
        }
        catch (JSDisconnectedException)
        {
            // Ignore - circuit is disconnected
        }
    }

    private void ToggleDrawerPinned()
    {
        IsDrawerPinned = !IsDrawerPinned;
        // When pinning, ensure drawer stays open. When unpinning, close it.
        IsDrawerOpen = IsDrawerPinned;
    }

    private void OnDrawerMouseEnter()
    {
        // Only respond to hover if not pinned
        if (!IsDrawerPinned)
        {
            IsDrawerOpen = true;
        }
    }

    private void OnDrawerMouseLeave()
    {
        // Only respond to hover if not pinned
        if (!IsDrawerPinned)
        {
            IsDrawerOpen = false;
        }
    }
}
