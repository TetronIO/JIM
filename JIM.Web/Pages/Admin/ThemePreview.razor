@* amamamamamamamamamamamamamamamamam *@
<MudText Typo="Typo.h5" Class="mt-8 mb-4">Tables</MudText>

<MudText Typo="Typo.h6" Class="mb-3">MudTable</MudText>
<MudTable Items="@_sampleData" Hover="true" Outlined="true" Elevation="0" Dense="false" Class="mb-5"
    Filter="new Func<SampleRow, bool>(TableFilterFunc)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Sample Data</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_tableSearchString" Placeholder="Search" Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" Immediate="true" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortBy="new Func<SampleRow, object>(x => x.Name)"><MudText Typo="Typo.button">Name</MudText></MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<SampleRow, object>(x => x.Department)"><MudText Typo="Typo.button">Department</MudText></MudTableSortLabel></MudTh>
        <MudTh><MudText Typo="Typo.button">Status</MudText></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<SampleRow, object>(x => x.Created)"><MudText Typo="Typo.button">Created</MudText></MudTableSortLabel></MudTh>
        <MudTh Style="text-align: right;"><MudText Typo="Typo.button">Actions</MudText></MudTh>
    </HeaderContent>
    <RowTemplate Context="row">
        <MudTd DataLabel="Name">
